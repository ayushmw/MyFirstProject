<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/card_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo4"
            android:padding="8dp"
            android:id="@+id/imBgImage"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/card_toolbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="52XX-XXXX-XXXX-1234"
            android:padding="8dp"
            android:id="@+id/tvCardNumber"
            android:layout_gravity="center_vertical"
            android:textColor="#fff"
            android:textSize="17dp"
            android:layout_above="@+id/tvExpiry"
            android:layout_alignLeft="@+id/imBgImage"
            android:layout_alignStart="@+id/imBgImage"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name on Card"
            android:id="@+id/tvName"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/imBgImage"
            android:layout_alignLeft="@+id/tvCardNumber"
            android:layout_alignStart="@+id/tvCardNumber" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MM/YY"
            android:id="@+id/tvExpiry"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_above="@+id/textView4"
            android:layout_alignRight="@+id/tvCardNumber"
            android:layout_alignEnd="@+id/tvCardNumber" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALID THRU"
            android:id="@+id/textView4"
            android:textColor="#fff"
            android:textSize="8dp"
            android:layout_above="@+id/tvName"
            android:layout_alignLeft="@+id/tvExpiry"
            android:layout_alignStart="@+id/tvExpiry" />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/bDeleteCard"
            android:background="@drawable/selector_delete"
            android:layout_marginTop="13dp"
            android:layout_marginRight="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
