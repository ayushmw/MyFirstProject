<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imBgImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        android:src="@drawable/logo4" />

    <TextView
        android:id="@+id/tvCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="81dp"
        android:padding="8dp"
        android:text="52XX-XXXX-XXXX-1234"
        android:textColor="#fff"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCardNumber"
        android:layout_alignStart="@+id/tvCardNumber"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Name on Card"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvExpiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvCardNumber"
        android:layout_alignRight="@+id/tvCardNumber"
        android:layout_below="@+id/tvCardNumber"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="MM/YY"
        android:textColor="#fff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvExpiry"
        android:layout_alignStart="@+id/tvExpiry"
        android:layout_below="@+id/tvExpiry"
        android:text="VALID THRU"
        android:textColor="#fff"
        android:textSize="8dp" />

    <TextView
        android:id="@+id/tvCardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCardNumber"
        android:text="Card Label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bDeleteCard"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tvCardLabel"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/imBgImage"
        android:layout_toRightOf="@+id/imBgImage"
        android:background="@drawable/selector_delete" />
</RelativeLayout>
    </android.support.v7.widget.CardView>