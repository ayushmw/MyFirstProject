<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textSize">17sp</item> // Size of the two spinner items
    </style>

    <style name="MyCustomToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">#FFFFFF </item> // Color of the text "Card Details" in activity bar
        <item name="android:textColorSecondary">#FFFFFF </item> // Three dot color on right top
        <item name="android:textSize">18sp</item> // Size of the pop-up items (on pressing three dots symbol on right top)
    </style>

</resources>
